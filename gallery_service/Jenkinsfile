pipeline {
    agent any

    environment {
        SERVICE_NAME    = "gallery_service"
        DOCKER_IMAGE    = "memory-${SERVICE_NAME}"
        DOCKER_REGISTRY = "tuan4886"
        TAG             = "${env.BUILD_NUMBER ?: 'dev'}"
        DOCKER_REPO     = "${DOCKER_REGISTRY}/${DOCKER_IMAGE}" 
    }

    stages {
        stage('Prepare Env File') {
            steps {
                withCredentials([
                    usernamePassword(credentialsId: 'gallery-db-credential-test',
                                     usernameVariable: 'DB_USER',
                                     passwordVariable: 'DB_PASS'),
                    string(credentialsId: 'jwt-secret', variable: 'JWT_SECRET')
                ]) {
                    sh '''
                        echo "POSTGRES_HOST=gallery-db-test" > gallery_service/tests/.env.db.gallery.test
                        echo "POSTGRES_PORT=5432" >> gallery_service/tests/.env.db.gallery.test
                        echo "POSTGRES_DB=gallery_test_db" >> gallery_service/tests/.env.db.gallery.test
                        echo "POSTGRES_USER=$DB_USER" >> gallery_service/tests/.env.db.gallery.test
                        echo "POSTGRES_PASSWORD=$DB_PASS" >> gallery_service/tests/.env.db.gallery.test

                        echo "DB_USER=$DB_USER" >> gallery_service/tests/.env.db.gallery.test
                        echo "DB_PASSWORD=$DB_PASS" >> gallery_service/tests/.env.db.gallery.test
                        echo "DB_NAME=gallery_test_db" >> gallery_service/tests/.env.db.gallery.test
                        echo "DB_HOST=gallery-db-test" >> gallery_service/tests/.env.db.gallery.test
                        echo "DB_PORT=5432" >> gallery_service/tests/.env.db.gallery.test

                        echo "SECRET_KEY=$JWT_SECRET" >> gallery_service/tests/.env.db.gallery.test
                        echo "ALGORITHM=HS256" >> gallery_service/tests/.env.db.gallery.test
                        echo "ACCESS_TOKEN_EXPIRE_MINUTES=30" >> gallery_service/tests/.env.db.gallery.test
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Starting build and test for gallery_service...'
                dir("${SERVICE_NAME}") {
                    // Dọn container trước khi test
                    sh 'docker-compose -f docker-compose.gallery.test.yml down -v'

                    // Build và chạy test, log kết quả rõ ràng
                    sh 'docker-compose -f docker-compose.gallery.test.yml up --build --exit-code-from gallery-service-test'
                    // Dọn sau test
                    sh 'docker-compose -f docker-compose.gallery.test.yml down -v'
                }
            }
        }

        stage('Build Production Image') {
            steps {
                script {
                    echo "Building Production Image..."
                    sh "docker build --pull -t ${DOCKER_REPO}:${TAG} -f ${SERVICE_NAME}/Dockerfile ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    echo "Pushing image to Docker Hub..."
                    withDockerRegistry(credentialsId: 'dockerhub-credentials', url: '') {
                        // Chỉ push với tag latest
                        sh "docker tag ${DOCKER_REPO}:${TAG} ${DOCKER_REPO}:latest"
                        sh "docker push ${DOCKER_REPO}:latest"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Deploying ${DOCKER_REPO}:latest to Docker Desktop Kubernetes..."
                    withCredentials([file(credentialsId: 'docker-desktop-kubeconfig', variable: 'KUBECONFIG_FILE')]) {

                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE apply -f ${SERVICE_NAME}/k8s/namespace.yml"
                        // Apply secret manifest
                        withCredentials([file(credentialsId: 'k8s-secret-file-gallery_service', variable: 'SECRET_FILE')]) {
                            sh "kubectl --kubeconfig=$KUBECONFIG_FILE apply -f $SECRET_FILE"
                        }

                        // Apply deployment và service
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n gallery apply -f ${SERVICE_NAME}/k8s/postgres-pvc.yml"
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n gallery apply -f ${SERVICE_NAME}/k8s/postgres-deployment.yml"
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n gallery apply -f ${SERVICE_NAME}/k8s/postgres-service.yml"
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n gallery apply -f ${SERVICE_NAME}/k8s/deployment.yml"
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n gallery apply -f ${SERVICE_NAME}/k8s/service.yml"

                        // Kiểm tra rollout
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n gallery rollout status deployment/gallery-service --timeout=180s"
                    }

                    echo "Deploy lên Docker Desktop Kubernetes thành công!"
                }
            }
        }
    }
    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
    }
}