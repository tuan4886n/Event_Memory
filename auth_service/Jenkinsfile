pipeline {
    agent any

    environment {
        SERVICE_NAME    = "auth_service"
        DOCKER_IMAGE    = "memory-${SERVICE_NAME}"
        DOCKER_REGISTRY = "tuan4886"
        TAG             = "${env.BUILD_NUMBER ?: 'dev'}"
        DOCKER_REPO     = "${DOCKER_REGISTRY}/${DOCKER_IMAGE}" 
    }

    stages {
        stage('Prepare Env File') {
            steps {
                withCredentials([
                    usernamePassword(credentialsId: 'auth-db-credential-test',
                                     usernameVariable: 'DB_USER',
                                     passwordVariable: 'DB_PASS'),
                    string(credentialsId: 'jwt-secret', variable: 'JWT_SECRET')
                ]) {
                    sh '''
                        # Tạo file env cho Test
                        ENV_FILE="auth_service/tests/.env.db.auth.test"
                        echo "DB_USER=$DB_USER" > $ENV_FILE
                        echo "DB_PASSWORD=$DB_PASS" >> $ENV_FILE
                        echo "DB_NAME=test_db" >> $ENV_FILE
                        echo "DB_HOST=auth-db-test" >> $ENV_FILE
                        echo "DB_PORT=5432" >> $ENV_FILE
                        
                        # DÒNG QUAN TRỌNG NHẤT CHO ALEMBIC:
                        echo "DATABASE_URL=postgresql://$DB_USER:$DB_PASS@auth-db-test:5432/test_db" >> $ENV_FILE

                        echo "POSTGRES_USER=$DB_USER" >> $ENV_FILE
                        echo "POSTGRES_PASSWORD=$DB_PASS" >> $ENV_FILE
                        echo "POSTGRES_DB=test_db" >> $ENV_FILE

                        echo "SECRET_KEY=$JWT_SECRET" >> $ENV_FILE
                        echo "ALGORITHM=HS256" >> $ENV_FILE
                        echo "ACCESS_TOKEN_EXPIRE_MINUTES=30" >> $ENV_FILE
                        
                        # Copy sang file .env.auth để app và alembic dùng chung trong container test
                        cp $ENV_FILE auth_service/.env.auth
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Starting build and test for auth_service...'
                dir("${SERVICE_NAME}") {
                    sh 'docker-compose -f docker-compose.auth.test.yml down -v'
                    sh 'docker-compose -f docker-compose.auth.test.yml up --build --exit-code-from auth-service-test'
                    sh 'docker-compose -f docker-compose.auth.test.yml down -v'
                }
            }
        }

        stage('Build & Push Production Image') {
            steps {
                script {
                    // Build image - Đảm bảo lệnh COPY trong Dockerfile bốc được thư mục alembic/
                    sh "docker build --pull -t ${DOCKER_REPO}:${TAG} -t ${DOCKER_REPO}:latest -f auth_service/Dockerfile ."
                    
                    withDockerRegistry(credentialsId: 'dockerhub-credentials', url: '') {
                        sh "docker push ${DOCKER_REPO}:${TAG}"
                        sh "docker push ${DOCKER_REPO}:latest"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Deploying to Kubernetes..."
                    withCredentials([file(credentialsId: 'docker-desktop-kubeconfig', variable: 'KUBECONFIG_FILE')]) {
                        // Apply toàn bộ cấu hình K8s
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE apply -f ${SERVICE_NAME}/k8s/namespace.yml"
                        // Apply secrets
                        withCredentials([file(credentialsId: 'k8s-secret-file-auth_service', variable: 'SECRET_FILE')]) {
                            sh "kubectl --kubeconfig=$KUBECONFIG_FILE apply -f $SECRET_FILE"
                        }

                        // Sử dụng mảng để apply cho gọn và sạch
                        def k8sFiles = [
                            'postgres-pvc.yml', 'postgres-deployment.yml', 'postgres-service.yml',
                            'deployment.yml', 'service.yml'
                        ]
                        for (file in k8sFiles) {
                            sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n auth apply -f ${SERVICE_NAME}/k8s/${file}"
                        }

                        // Force restart deployment để nhận image mới nhất nếu tag là 'latest'
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n auth rollout restart deployment/auth-service"
                        sh "kubectl --kubeconfig=$KUBECONFIG_FILE -n auth rollout status deployment/auth-service --timeout=180s"
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
    }
}